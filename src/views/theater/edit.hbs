<main>
    <form class="theater-form" method="post">
        <h1>Edit Theater</h1>
        <div>
            <label for="title">Theater Title:</label>
            <input type="text" placeholder="Theater name" name="title" value="{{title}}">
        </div>
        <div>
            <label for="description">Theater Description:</label>
            <textarea placeholder="Description" name="description" value="">{{description}}</textarea>
        </div>
        <div>
            <label for="imageUrl">Image url:</label>
            <input type="text" placeholder="Image Url" name="imageUrl" value="{{imageUrl}}">
        </div>
        <div class="check">
            <input type="checkbox" name="checkBox" id="check-box" checked="{{isChecked}}">
            <label for="check-box">Public</label>
        </div>
        <button class="btn" type="submit">Submit</button>
    </form>
</main>